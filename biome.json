{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": [
            "node_modules",
            ".DS_Store",
            "dist",
            "coverage",
            "lib",
            "venv",
            ".venv",
            "target",
            "site",
            "docs/js_ref/",
            "docs/rust_ref/",
            "*.yml",
            "*.yaml",
            "*.toml",
            "*.zetch.*",
            "py_rust/tests/file/test_data/*"
        ]
    },
    "formatter": {
        "enabled": true,
        "lineWidth": 100,
        "indentWidth": 4,
        "indentStyle": "space"
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": true
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "off"
            },
            "correctness": {
                "noEmptyPattern": "off",
                "useHookAtTopLevel": "error"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noConsoleLog": "warn",
                "noMisrefactoredShorthandAssign": "warn"
            },
            "style": {
                "useBlockStatements": "warn",
                "useSingleCaseStatement": "error"
            },
            "nursery": {
                "useImportType": "warn",
                "useGroupedTypeImport": "warn",
                "useExportType": "warn",
                "noUnusedImports": "warn"
            }
        }
    }
}
